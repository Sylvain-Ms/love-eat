<div class="profile-container">
  <% users.each do |user| %>
    <%# link_to user_path(user) %>
      <div class="user-profile-card">
        <div class="user-profile-picture">
          <% if user.try(:pictures).try(:attached?) %>
            <% user.pictures.first(1).each do |picture| %>
              <%= cl_image_tag picture.key , style: "height: 766px; width: 100%; object-fit: cover;"%>
            <% end %>
          <% else %>
            <img src="https://source.unsplash.com/random/372x600/?portrait&seed=<%= user.id %>" style="height: 100%; width: 100%;">
          <% end %>
        </div>
        <div class="user-info">
          <h2><%= user.first_name %></h2>
          <p><%= user.foodmoods.map(&:name).join(', ') %></p>
        </div>
      </div>
      <div class="like-dislike-buttons"> <%# Doit-on crÃ©er un IF pour : %>
        <%= image_tag "cross.svg" %> <%# stocker dans la DB avec un refused_user avec des << %>
        <%= image_tag "heart.svg" %> <%# stocker dans la DB avec un user_liked avec des << %>
      </div>
    <%# end %>
  <% end %>
</div>
