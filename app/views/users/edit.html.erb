<%= simple_form_for @user do |f| %>
  <%= f.input :distance %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :birthdate, as: :date %>
  <%= f.input :description %>
  <%= f.input :gender, collection: ['Femme', 'Homme'] %>
  <%= f.input :diet %>
  <%= f.input :password %>
  <%= f.input :pictures, as: :file, input_html: { multiple: true } %>
  <%= f.button :submit %>
<% end %>
